# ============================================
# VARIABLES DE ENTORNO - APRENDECSHARP API
# ============================================

# Configuración del servidor
NODE_ENV=development
PORT=3000

# Configuración de la base de datos SQL Server
DB_SERVER=localhost
DB_DATABASE=AprendeCsharp
DB_USER=sa
DB_PASSWORD=tu_password_aqui
DB_PORT=1433
DB_ENCRYPT=false
DB_TRUST_CERT=true

# Configuración de autenticación JWT
JWT_SECRET=tu-secreto-super-seguro-aqui-cambiar-en-produccion
JWT_EXPIRES_IN=7d

# Configuración de bcrypt
BCRYPT_ROUNDS=12

# Configuración de CORS (para producción)
ALLOWED_ORIGINS=http://localhost:3000,https://tu-dominio.com

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# Configuración de logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de email (para verificación y recuperación)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-password-de-aplicacion
EMAIL_FROM=noreply@aprendecsharp.com

# Configuración de Redis (opcional, para sesiones)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configuración de archivos
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Configuración de seguridad
SESSION_SECRET=tu-session-secret-aqui
COOKIE_SECRET=tu-cookie-secret-aqui

# Configuración de monitoreo
ENABLE_METRICS=true
METRICS_PORT=9090

# Configuración de desarrollo
DEBUG=true
VERBOSE_LOGGING=true
